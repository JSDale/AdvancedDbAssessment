<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="../materialize/css/materialize.css"  media="screen,projection"/>
    <title>Vestry Goup Planner</title>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>

  <body>

    <nav>
      <div class="nav-wrapper cyan">
        <a href="/" class="brand-logo" style="text-align: center; padding-left: 2%;">Youth Group Online Planner</a>
      </div>
    </nav>

    <div class="card large">
      <p class="card-title" style="text-align: center;">Log in</p>
      <div id="log_in" style="padding-top: 1%; text-align: center;">
        <form method="POST" action="/login">
          <div class="input-field col s6">
            <input placeholder="email" name="email" id="email" type="email" class="validate" style="text-align: center;">
            <label for="email" style="text-align: center;">email</label>
            <% if (errors['email']) { %>
              <p style="color: red"><%= errors['email'].message %></p>
            <% } %>
          </div>
          <div class="input-field col s6">
            <input placeholder="Password" id="password" name="password" type="password" class="validate" style="text-align: center;">
            <label for="password" style="text-align: center;">Password</label>
            <% if (errors['password']) { %>
              <p style="color: red"><%= errors['password'].message %></p>
            <% } %>  
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Log In
          <i class="material-icons right">send</i>
        </button>
      </form>  
    </div>
        
    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="../materialize/js/materialize.js"></script>
  </body>
</html>