<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="../materialize/css/materialize.css"  media="screen,projection"/>
    <title>Sign in (attendance)</title>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>

    <body>
        <%- include('common/header'); -%>

        <div class="container">
            <h1>Sign in (attendance)</h1>
            <form method="POST" action="/attend/<%= user._id %>">
                <input type="hidden" name="attendance" value="<%= user.attendance %>"></input>
                <div class="row justify-content-md-center">
                <div class="col-">
                    <div class="form-group">
                        <label for="attendanceDate">Date of Attendance</label>
                        <div class="input-fieldcol s12">
                            <input placeholder="Date of Attendance" name="attendanceDate" id="attendanceDate" type="date">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="youthGender">Attended? </label>
                        <div class="input-fieldcol s12">
                            <select name="attended">
                            <option value="" disabled>Choose your option</option>
                            <option value="false">No</option>
                            <option value="true">Yes</option>
                            </select>
                        </div>
                    </div>
                </div>
                <button class="btn waves-effect waves-light" type="submit" name="action">Update
                    <i class="material-icons right">send</i>
                </button>
            </form>
        </div>
            
        <!--JavaScript at end of body for optimized loading-->
        <script type="text/javascript" src="../materialize/js/materialize.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
            var elems = document.querySelectorAll('select');
            var instances = M.FormSelect.init(elems, {});
            });
        </script>
    </body>
</html>